@model CoachingCenter.ViewModels.CenterIndexData

@{
    ViewBag.Title = "Centers";
}

<h1>Coaching Centers</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Type</th>
        <th>E-Mail</th>
        <th>Mobile</th>
    </tr>
    @foreach (var item in Model.Centers)
    {
        string selectedRow = "";
        if (item.id == ViewBag.id)
        {
            selectedRow = "selectedrow";
        }
        <tr class="@selectedRow" valign="top">
          
            <td>
                @item.name
            </td>
            <td>
                @item.type
            </td>
            <td>
                @item.email
            </td>
            <td>
                @item.mobile
            </td>
            <td>
                @Html.ActionLink("Select", "Index", new { id = item.id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @if (item.OfficeAssignment != null)
                {
                    @item.OfficeAssignment.Location
                }
            </td>*@
        </tr>
    }
</table>

@if (Model.Teachers != null)
{
    <h3>List Of  Teachers in the Selected Center</h3>
    <table>
        <tr>
            <th></th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Skill</th>
            <th>Mobile</th>
            <th>Email</th>
        </tr>

        @foreach (var item in Model.Teachers)
        {
            string selectedRow = "";
            if (item.id == ViewBag.id)
            {
                selectedRow = "selectedrow";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.ActionLink("Student List", "Index", new { TeacherID = item.id })
                </td>
                <td>
                    @item.firstname
                </td>
                <td>
                    @item.lastname
                </td>
                <td>
                    @item.skill
                </td>
                <td>
                    @item.mobile
                </td>
                <td>
                    @item.email
                </td>
            </tr>
        }

    </table>
}


@if (Model.Students != null)
{
    <h3>
        Students Enrolled in Selected Course
    </h3>
    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Mobile</th>
            <th>Email</th>
        </tr>
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>
                    @item.firstname
                </td>
                <td>
                    @item.lastname
                </td>
                <td>
                    @item.mobile
                </td>
                <td>
                    @item.email
                </td>
            </tr>
        }
    </table>
}